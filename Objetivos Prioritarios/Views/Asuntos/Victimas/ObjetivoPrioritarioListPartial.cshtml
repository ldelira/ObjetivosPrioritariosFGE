    function addObjetivoAsunto(int_id_objetivo, observaciones) {

    if (!int_id_objetivo) {
        swal("Error", "No se recibió el ID del objetivo.", "error");
        return;
    }

    $.ajax({
        type: 'POST',
        url: '@Url.Action("addObjetivoAsunto", "Asuntos")',
        data: {
            int_id_objetivo: int_id_objetivo,
            int_id_asunto_relacionado: $("#int_id_asunto_relacionado").val(),
            observaciones: observaciones
        },
        success: function (resp) {
            if (resp.IsSuccess) {
                swal({
                    title: "Éxito",
                    text: resp.Message,
                    type: "success"
                }, function () {
                    location.reload(); // ✅ Se ejecuta tras cerrar el mensaje
                });

            } else {
                swal("Error", resp.Message, "error");
            }
        }
    });
}


