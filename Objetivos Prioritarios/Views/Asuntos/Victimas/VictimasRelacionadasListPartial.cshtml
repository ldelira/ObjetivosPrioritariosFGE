    function DisableVictimaRelacionada(id) {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("DisableVictimaRelacionada", "Asuntos")',
            data: { int_id_asunto_victima: id },
            success: function (data) {
                if (data.IsSuccess) {
                    swal({
                        title: "",
                        text: data.Message,
                        type: 'success'
                    }, function () { swal.close(); refreshVictimasRelacionadasList(); });
                } else {
                    swal({
                        title: "Error",
                        text: data.Message || "No tienes permisos para esta acción.",
                        type: 'error'
                    });
                }
            }
        });
    }

    function ActivateVictimaRelacionada(id) {

        $.ajax({
            type: 'POST',
            url: '@Url.Action("ActivateVictimaRelacionada", "Asuntos")',
            data: { int_id_asunto_victima: id },
            success: function (data) {
                if (data.IsSuccess) {
                    swal({
                        title: "",
                        text: data.Message,
                        type: 'success'
                    }, function () { swal.close(); refreshVictimasRelacionadasList(); });
                } else {
                    swal({
                        title: "Error",
                        text: data.Message || "No tienes permisos para esta acción.",
                        type: 'error'
                    });
                }
            }
        });
    }



$(document).on('click', '.ver-foto-victima', function (e) {
    e.preventDefault();

    var id = $(this).data('id'); // este es int_id_victima

    // Mostrar modal y estado de carga
    $('#modalFotoTituloVictima').text('Cargando...');
    $('#modalFotoImagenVictima').attr('src', '');
    $('#modalDescargarVictima').hide();

    var modal = new bootstrap.Modal(document.getElementById('modalFotoVictima'));
    modal.show();

    // Llamada AJAX POST
    $.ajax({
        url: '@Url.Action("GetFotoAjaxVictimas", "Asuntos")',
        method: 'POST',
        dataType: 'json',
        data: { id: id },
        success: function (resp) {
            if (resp && resp.success && resp.foto) {
                var foto = resp.foto;
                var src = (foto.indexOf('data:image') === 0)
                    ? foto
                    : ('data:image/jpeg;base64,' + foto);

                $('#modalFotoTituloVictima').text('Fotografía de la víctima');
                $('#modalFotoImagenVictima').attr('src', src);

                if ($('#modalDescargarVictima').length) {
                    $('#modalDescargarVictima').attr('href', src);
                    $('#modalDescargarVictima').attr('download', 'foto_victima_' + id + '.jpg');
                    $('#modalDescargarVictima').show();
                }
            } else {
                $('#modalFotoTituloVictima').text(resp && resp.message ? resp.message : 'Sin fotografía disponible');
                $('#modalFotoImagenVictima').attr('src', '');
                $('#modalDescargarVictima').hide();
            }
        },
        error: function (xhr, status, err) {
            console.error('Error al obtener foto víctima:', err);
            $('#modalFotoTituloVictima').text('Error al cargar la imagen');
            $('#modalFotoImagenVictima').attr('src', '');
            $('#modalDescargarVictima').hide();
        }
    });
});









