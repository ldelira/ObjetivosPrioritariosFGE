@model List<Objetivos_Prioritarios.Models.tb_Objetivo>




<div class="main-panel">
    <div class="content-wrapper">

        <div class="row">
            <div class="col-md-12 stretch-card grid-margin ">
                <div class="card" >
                    <div class="card-body card-fixed">
                        <p class="card-title">Listado de objetivos para Fichas Informativas</p>
                        <div class="row">
                            <div class="col-md-1">
                                <label class="control-label">Estados:</label>
                            </div>
                            <div class="col-md-2">
                                <select class="form-control" id="estadoGeneral">
                                    <option value="1" id="1" @((bool)ViewBag.Actives ? "selected" : "")>Activo</option>
                                    <option value="0" id="0" @(!(bool)ViewBag.Actives ? "selected" : "")>Inactivo</option>
                                </select>
                            </div>
                            <div class="col-md-2"></div>
                            <div class="col-md-7" style="text-align:right">
                                <button type="button" class="btn btn-primary"
                                        onclick="addEditAlbumFicha()">
                                    Agregar Album Fichas 
                                </button>
                            </div>

                        </div>
                        <br>
                        <div class="row">
                            <div class="col-12">
                                <div class="table-responsive ">
                                    <table id="generalDataTable" class="dataTable table table-striped" style="width:100%">
                                    </table>
                                </div>
                            </div>
                            </div>
                        </div>
                </div>


            </div>
        </div>



    </div>
 
</div>
<!-- main-panel ends -->

<div id="addEditAlbumFicha"></div>

<script>
    $(document).ready(function () {
        FillGrid();
    });

    $("#estadoGeneral").change(function () {
        var valor = $("#estadoGeneral").val();
        if (valor == "1") {
            refresfichaobjetivosList(true);
        } else {
            refresfichaobjetivosList(false);
        }
    });


    var columnFichaInfo = [

        {
            title: "Id",
            data: "int_id_album_ficha_objetivo",
            orderable: true,
            IsFiltered: false
        },
        {
            title: "Nombre Album",
            data: "nvarchar_nombre_album",
            orderable: true,
            IsFiltered: false
        },
        {
            title: "Descripción",
            data: "nvarchar_descripcion_album",
            orderable: true,
            IsFiltered: false
        },


        {
            title: "Acciones",
            data: "int_id_album_ficha_objetivo", render: function (data, type, full, meta) {
                var action;
                if ('@ViewBag.Actives'.toUpperCase() == 'TRUE') {
                    action = [
                        { divId: 'div_EditUser_' + data, data: data, functionToExec: 'addEditAlbumFicha', toolTip: 'Editar Album', icon: 'fa fa-edit' },
                        { divId: 'div_EditUser_' + data, data: data, functionToExec: 'addGruoupFicha', toolTip: 'Agregar Objetivos Album', icon: 'fa fa-users' },

                        { divId: 'div_InactivateUser_' + data, data: data, functionToExec: 'DisableAlbum', toolTip: 'Desactivar Objetivo', icon: 'fa fa-trash' },



                    ];
                } else {
                    action = [
                        { divId: 'div_InactivateUser_' + data, data: data, functionToExec: 'ActivateAlbum', toolTip: 'Activar Objetivo', icon: 'fa fa-power-off' },
                    ];
                }

                return AddActionsToGrid(action);
            }
        }
    ];


